<!-- Header -->
<%- include("templates/header") %>
    <div class="my-5 mx-auto">
        <!-- Notifications Page -->
        <!-- Exercise notifications  -->
        <div class="card light-green-background dark-green-border">
            <div class="container p-0">

                <div class="d-flex">

                    <div class="p-2">
                        <label class="form-label m-0">Exercise notifications</label>
                    </div>
                    <div class="ms-auto p-2 form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="exercise-frequency-toggle-switch"
                            onchange="toggleNotification('exercise-frequency-toggle-switch')">
                    </div>
                </div>

                <div id="exercise-frequency-additional-div" class="d-none border-top">
                    <div class="wrapper">
                        <div class="radio-group-title">Frequency:</div>

                        <div class="radio-group-wrapper  white-transparent-background">
                            <div class="radio-wrapper">
                                <input type="radio" id="id-radio-1" name="frequency" hidden />
                                <label for="id-radio-1">Daily</label>
                            </div>

                            <div class="radio-wrapper">
                                <input type="radio" id="id-radio-2" name="frequency" hidden />
                                <label for="id-radio-2">Every Other Day</label>
                            </div>

                            <div class="radio-wrapper">
                                <input type="radio" id="id-radio-3" name="frequency" hidden />
                                <label for="id-radio-3">Weekly</label>
                            </div>
                        </div>
                        <div class="d-flex" id="exercise-time">

                            <div class="p-2">
                                <label class="form-label m-0">Time</label>
                            </div>
                            <div class="ms-auto p-2 form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="exercise-time-toggle-switch"
                                    onchange="toggleNotification('exercise-time-toggle-switch')">
                            </div>
                        </div>
                        <div id="exercise-time-additional-div" class="d-none"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Checkup notifications  -->
        <div class="card light-green-background dark-green-border my-2">
            <div class="container p-0">

                <div class="d-flex">

                    <div class="p-2">
                        <label class="form-label m-0">Checkup notifications</label>
                    </div>
                    <div class="ms-auto p-2 form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="checkup-toggle-switch"
                            onchange="toggleNotification('checkup-toggle-switch')">
                    </div>
                </div>

                <div id="checkup-frequency-additional-div" class="d-none checkup-toggle-switch border-top">
                    <div class="wrapper">
                        <div class="radio-group-title">Frequency:</div>

                        <div class="radio-group-wrapper  white-transparent-background">
                            <div class="radio-wrapper">
                                <input type="radio" id="id-radio-1" name="frequency" hidden />
                                <label for="id-radio-1">Weekly</label>
                            </div>

                            <div class="radio-wrapper">
                                <input type="radio" id="id-radio-2" name="frequency" hidden />
                                <label for="id-radio-2">Every Other Week</label>
                            </div>

                            <div class="radio-wrapper">
                                <input type="radio" id="id-radio-3" name="frequency" hidden />
                                <label for="id-radio-3">Monthly</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script>
        function toggleNotification(purpose) {
            var checkBox = document.getElementById(purpose);
            var additionalDiv = document.getElementById("exercise-frequency-additional-div");
            switch (purpose) {
                case 'exercise-time-toggle-switch':
                    additionalDiv = document.getElementById("exercise-time-additional-div");
                case 'checkup-toggle-switch':
                    console.log("Checkup");
                    additionalDiv = document.getElementById("checkup-frequency-additional-div");
            }
            if (checkBox.checked == true) {
                additionalDiv.classList.remove("d-none");
            } else {
                additionalDiv.classList.add("d-none");
            }
        }

        const inputs = document.querySelectorAll('input[name="frequency"]');

        if (inputs) {
            inputs.forEach((input) => {
                input.addEventListener('change', (event) => {
                    console.log('Selected value:', event?.target?.value);
                })
            });
        }
    </script>


    <!-- Footer -->