<!-- Header -->
<%- include("templates/header") %>
    <!-- User name page  -->
    <div class="container py-2">
        <div class="form-group border-1 dark-green-border mt-5">
            <label for="name" class="text-start font-md">New password</label>
            <input type="password" class="form-control border-0 light-green-background font-lg focus" id="password"
                placeholder="Enter your password" value="password">
        </div>
        <div class="form-group border-1 dark-green-border my-2">
            <label for="name" class="text-start font-md">Confirm password</label>
            <input type="password" class="form-control border-0 light-green-background font-lg focus" id="confirmPassword"
                placeholder="Enter your password" value="password">
        </div>
        <div class="error dark-pink d-none" id="error-message">
            <p> Passwords don't match.</p>
        </div>
    </div>

    <form method="POST" action="update-password/<%= user._id %>" class="mx-2 px-1">
        <button type="submit" class="btn dark-green-background pill white-font font-lg" id="submitButton">
            Save
        </button>
    </form>

