<!-- Header -->
<%- include("templates/header") %>
    <!-- User name page  -->
    <form method="POST" action="update-email/<%= user[0]._id %>">
        <div class="container py-2"></div>
            <div class="form-group border-1 dark-green-border my-5">
                <label for="email" class="text-start font-md">Email</label>
                <input type="email" class="form-control border-0 light-green-background font-lg focus" id="email"
                    name="email" placeholder="Enter your email" value=<%= user[0].email %>>
            </div>
        </div>

        <button type="submit" class="btn dark-green-background pill white-font font-lg">
            Save
        </button>
    </form>